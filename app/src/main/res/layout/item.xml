<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item"
    android:layout_marginRight="@dimen/item_margin_horizontal"
    android:layout_marginLeft="@dimen/item_margin_horizontal"
    android:layout_marginTop="@dimen/item_margin_vertical"
    android:layout_marginBottom="@dimen/item_margin_vertical">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:paddingStart="@dimen/item_date_padding_horizontal"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:gravity="start"
            tools:text="01.07.2019"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_name_padding_top_vertical"
            android:paddingBottom="@dimen/item_name_padding_bottom_vertical"
            android:paddingStart="@dimen/item_padding_horizontal"
            android:paddingEnd="@dimen/item_padding_horizontal"
            android:textSize="20sp"
            android:gravity="start"
            tools:text="молоко"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorItemShadow"
        android:textSize="20sp"
        android:paddingTop="@dimen/item_padding_vertical"
        android:paddingBottom="@dimen/item_padding_vertical"
        android:paddingStart="@dimen/item_padding_horizontal"
        android:paddingEnd="@dimen/item_padding_horizontal"
        android:gravity="center"
        tools:text="25Р"/>
</LinearLayout>